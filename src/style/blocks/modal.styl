.modal
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  opacity 0
  padding 50px 0
  pointer-events none
  z-index 1000
  &-overlay
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0, 0, 0, 0.57)
    z-index 1
  &-container
    position absolute
    top 50%
    left 0
    right 0
    border-radius: 3px
    background-color: #ffffff
    box-shadow: $shadow-modal
    margin 0 auto
    padding 24px 24px
    transform translateY(-50%)
    width 600px
    z-index 2
    &__close
      position absolute
      top 31px
      right 24px
      cursor pointer
      height 14px
      width 14px
      svg
        display block
        height 100%
        fill $c-text-btn
        width 100%
        &:hover
          fill $c-text-btn-hover
        &:active
          fill $c-text-btn-active
        
    &__title
      font-size 19px
      line-height 1.47
      user-select none
    &__content
      border-top 1px solid $c-lines
      margin 12px 0 0
      padding 24px 0 0  
      form
        display flex
        align-items center
        .input
          flex-grow 1
        .btn
          flex 0 0 auto
          margin 0 0 0 8px
  &._open
    opacity 1
    pointer-events auto





    